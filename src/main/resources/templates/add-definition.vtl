<h2 class="well">Add Definition for $word.getWord()</h2>

<form action="/definitions" method="post">
  <input id="definitionId" name="definitionId" type="hidden" value="$word.getId()">
  <div class="form-group">
    <label for="definition">Definition</label>
    <input id="definition" name="definition" type="text" class="form-control">
  </div>
  <button type="submit" class="btn btn-success">Add</button>
</form>
